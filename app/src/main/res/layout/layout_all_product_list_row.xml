<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFood"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:scaleType="fitXY"
                android:background="@drawable/food"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFoodName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:text="Food Name" />

                <ImageView
                    android:id="@+id/tvFoodType"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <View
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="#d3d3d3"/>

            <TextView
                android:id="@+id/tvFoodDesc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="This is food description Here...."
                />

            <View
                android:id="@+id/div2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="#d3d3d3"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDiscountRs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvActualRs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:text="Rs. 220" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvHalfQty"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layoutPlusMinus"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end">

                    <ImageView
                        android:id="@+id/imgMines"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:background="@drawable/disable_mines"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvItemCount"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/imgPlus2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:background="@drawable/add_dish"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LayoutPlusDummy"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imgPlusDummy"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/add_dish"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/blankSpace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:visibility="gone" />

</LinearLayout>