<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5sdp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_47sdp"
            android:background="@color/color_white"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolBarStyle">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"

                >
            <TextView
                android:id="@+id/tvOrderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:text="#40367"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvOrderID"
                android:gravity="center_vertical"
                android:text="ORDER STATUS"
                android:textColor="@color/color_dark_green" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                card_view:cardBackgroundColor="#faf8f8"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:text="STATUS"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:background="@color/color_dark_green" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgRecieved"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/received_black" />
                        <View
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/color_dark_green" />

                        <ImageView
                            android:id="@+id/imgInProcess"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:background="@drawable/in_process_black" />

                        <View
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/color_dark_green" />

                        <ImageView
                            android:id="@+id/imgOutToDeli"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:background="@drawable/carpic"
                             />

                        <View
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/color_dark_green" />

                        <ImageView
                            android:id="@+id/imgCompleted"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:background="@drawable/completed_black" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRecieved"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_weight="0.6"
                            android:text="RECEIVED"
                            android:textAlignment="center"
                            android:textColor="@color/color_garay"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvInProcess"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_weight="0.7"
                            android:text="IN PROCESS"
                            android:textAlignment="center"
                            android:textColor="@color/color_garay"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvOut"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:text="OUT FOR DELIVERY"
                            android:textAlignment="center"
                            android:textColor="@color/color_garay"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvCompletd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:text="COMPLETED"
                            android:textAlignment="center"
                            android:textColor="@color/color_garay"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvOrderDateTxt"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="Order date"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tvOrderDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/color_gray_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvScheduleTimeTxt"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="Mobile Number"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tvScheduleTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/color_gray_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPlacedAtTxt"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="Hotel Name"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tvPlacedAt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/color_gray_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAddressTxt"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="Address"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                card_view:cardBackgroundColor="#faf8f8"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOrderSummry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:text="ORDER SUMMARY"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:background="@color/color_dark_green" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="#e9e4e4"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMealName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_weight="1.5"
                            android:text="Meal Name"
                            android:textColor="@color/color_black" />

                        <TextView
                            android:id="@+id/tvHalfLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_weight="1.5"
                            android:text="    Label"
                            android:textAlignment="center"
                            android:textColor="@color/color_black" />

                        <TextView
                            android:id="@+id/tvHalfQty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:text="Quantity"
                            android:textAlignment="center"
                            android:textColor="@color/color_black" />

                        <TextView
                            android:id="@+id/tvHalfPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:text="Cost"
                            android:textAlignment="textEnd"
                            android:textColor="@color/color_black"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_orderList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="#e9e4e4" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:id="@+id/tvItemTotTxt"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="Item Total"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tvItemTot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/color_gray_light" />

                    <LinearLayout
                        android:id="@+id/layoutDiscount_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layoutDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:orientation="horizontal"

                            >

                            <TextView
                                android:id="@+id/tvConvenFee"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="Discount"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvConvenice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="right"
                                android:text="Rs 00"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/divDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@color/color_gray_light" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="#f4efef"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvAfterDiscountTotTxt"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="Price"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvAfterDiscountTot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="right"
                                android:text="Rs 0"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@color/color_gray_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tvGst_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/tvGstTxt"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="GST Charge"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvGstAmt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@color/color_gray_light" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="#f4efef"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvAfterGstTotTxt"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="Price"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvAfterGstTot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="right"
                                android:text="Rs 0"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@color/color_gray_light" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDelivery_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/layoutDelivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:orientation="horizontal"

                            >

                            <TextView
                                android:id="@+id/tvDeliveryChargeTxt"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="Delivery Charges"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvDeliveryCharge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/divDelivery"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@color/color_gray_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutContainer_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layoutContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvContainerChargeTxt"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="Container Charge"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvContainerCharge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/divContainer"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@color/color_gray_light" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvTaxTxt"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="GST"
