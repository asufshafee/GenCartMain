<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_115sdp"
    android:layout_margin="@dimen/_4sdp"
    card_view:cardBackgroundColor="@color/color_white"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtStoreName"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Store Name"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/address"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_below="@id/txtStoreName"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/header_location_icon" />

                <TextView
                    android:id="@+id/txtDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtStoreName"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toRightOf="@id/address"
                    android:maxLength="20"
                    android:text="20 Mils Away"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>


            <View
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tvDistance"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/div"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imRat1"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_margin="@dimen/_1sdp"
                    android:background="@drawable/without_fill" />

                <ImageView
                    android:id="@+id/imRat2"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_margin="@dimen/_1sdp"
                    android:background="@drawable/without_fill" />

                <ImageView
                    android:id="@+id/imRat3"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_margin="@dimen/_1sdp"
                    android:background="@drawable/without_fill" />

                <ImageView
                    android:id="@+id/imRat4"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_margin="@dimen/_1sdp"
                    android:background="@drawable/without_fill" />

                <ImageView
                    android:id="@+id/imRat5"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_margin="@dimen/_1sdp"
                    android:background="@drawable/without_fill" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/addresslogo"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_below="@+id/ll"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/header_location_icon" />

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_toRightOf="@id/addresslogo"
                    android:maxLength="50"
                    android:text="E-123 Saraswati Nagar, Jaipur"
                    android:textSize="@dimen/_10sdp"

                    />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/rl1">

            <ImageView
                android:id="@+id/imageViewStore"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="@dimen/_84sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_2sdp"
                android:scaleType="fitXY"
                android:src="@drawable/food" />
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>