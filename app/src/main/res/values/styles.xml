<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_light_gray</item>
        <item name="colorControlActivated">@color/color_light_gray</item>
    </style>
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
    </style>


    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/color_black</item>
        <item name="android:textColorSecondary">@color/color_black</item>
        <item name="actionMenuTextColor">@color/color_white</item>
    </style>
</resources>
